<%- include('../partials/header.ejs')%>
	<div class="container-fluid container m-4">
		<form class="rounded" id="form" method="POST" action="/exchange/<%= equipment.id %>?_method=PUT">

		  	<div class="form-group m-3">
		    	<label class="m-1 text-green"><b>Sport</b></label>
		    	<input type="text" class="form-control fst-italic" name="category" id="category" value="<%=equipment.category%>" required>
		  	</div>
	  		<div class="form-group m-3">
	  	  		<label class="m-1 text-green"><b>Item</b></label>
	  	  		<input type="text" class="form-control fst-italic" id="name" name="name" value="<%= equipment.name%>" required>
	  		</div>
  			<div class="form-group m-3">
  		  		<label class="m-1 text-green"><b>Details</b></label>
  		  		<input class="form-control fst-italic" type="text" name="content" id="content" value="<%= equipment.content%>" required minlength="10">
  			</div>

		  	<button type="submit" class="btn btn-success m-3"><b>Update</b></button>

		</form>
	</div>
<%- include('../partials/footer.ejs')%>